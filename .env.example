# Arc L1 Network Configuration
# Copy this file to .env and fill in your values

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Arc L1 Testnet RPC URL (default provided, can override)
ARC_RPC_URL=https://arc-testnet.drpc.org

# Arc L1 Mainnet RPC URL (for future use)
ARC_MAINNET_RPC_URL=https://rpc.arc.network

# Arc Explorer API Key (for contract verification)
ARC_EXPLORER_API_KEY=your_arc_explorer_api_key_here

# Enable gas reporting in tests
REPORT_GAS=false

# Important Notes:
# - Arc L1 uses USDC as native gas token (NOT ETH)
# - USDC System Contract: 0x3600000000000000000000000000000000000000
# - Chain ID Testnet: 5042002
# - Ensure your wallet has USDC for gas fees
